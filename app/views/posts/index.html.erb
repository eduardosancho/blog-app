<h2>Posts Index</h2>

<%= render 'shared/user_row', user: @user%>

<div class='posts-list'>
  <% for posts in 1..2 do %>
  <div class='post-details-container'>
    <div class='post-container'>
      <h4>Post #<%= posts %> </h4>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minus ab eius laboriosam voluptates vel impedit, placeat quas quam dolores illum omnis 
      assumenda optio, nemo, iure laudantium corrupti aut blanditiis velit?</p>
      <%= link_to "See post details", user_post_path(@user_id, posts) %>
    </div>
    <div class='comments-container'>
      <% for comments in 1..5 do %>
        <span class='comment-preview'>Username: Comment <%= comments %></span>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

<div class='route-links'>
  <%= link_to "See user's profile", user_path(@user_id) %>
</div>
