<%= form_with model: post, url: user_posts_path(current_user), method: :post, local: true, scope: :post, html: { class: 'post-form-new' } do |form| %>
  <%= form.text_field :title, placeholder: 'Enter title...'%>
  <%= form.text_area :text, placeholder: 'Enter text...' %>
  <%= form.submit "Add Post" %>
<% end %>

<%= link_to "Go back", :back %>